//- Все примеси в этом файле должны начинаться c имени блока (icon)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin icon(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +icon('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' icon--' + modsList[i].trim();
      }
    }

  .icon&attributes(attributes)
    svg(class= mods)
      use(xlink:href = 'img/svgSprite.svg#' + text)
