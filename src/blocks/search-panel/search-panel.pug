//- Все примеси в этом файле должны начинаться c имени блока (search-panel)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin search-panel(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +search-panel('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' search-panel--' + modsList[i].trim();
      }
    }

  .search-panel(class=allMods)&attributes(attributes)
    .search-panel__search
      img.search-panel__photo-input(src='', alt='')
      input.search-panel__input(placeholder='Choose fighter')
    .search-panel__result
      +loader
