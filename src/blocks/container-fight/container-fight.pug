//- Все примеси в этом файле должны начинаться c имени блока (container-fight)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin container-fight(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +container-fight('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' container-fight--' + modsList[i].trim();
      }
    }

  .container-fight(class=allMods)&attributes(attributes)
    .container-fight__inner
      .container-fight__hero(id='0')
        .container-fight__search
          +search-panel
        p.container-fight__hero-empty Type name of  champion above
        .container-fight__card-fight.container-fight__card-fight--disabled
        .card-fight.card-fight--disabled
      p.container-fight__text VS
      .container-fight__hero(id='1')
        .container-fight__search
          +search-panel
        p.container-fight__hero-empty Type name of champion above
        .container-fight__card-fight.container-fight__card-fight--disabled
    button.container-fight__button.button.button--disabled fight!
    .container-fight__result.container-fight__result--disabled
