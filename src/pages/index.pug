    let perPage = ['12', '24', '48']
    let pokemonInfo = [
      {
        name: 'Bulbasaur',
        photo: 'img/container-cards__photo-01.png',
        number: '001',
        type: ['icon__poison', 'icon__grass'],
        health: '45',
        speed: '45',
        attack: '49 / 65',
        defence: '49 / 65'
      },
      {
        name: 'Ivysaur',
        photo: 'img/container-cards__photo-02.png',
        number: '002',
        type: ['icon__poison', 'icon__grass'],
        health: '60',
        speed: '60',
        attack: '62 / 80',
        defence: '63 / 80'
      },
      {
        name: 'Venusaur',
        photo: 'img/container-cards__photo-03.png',
        number: '003',
        type: ['icon__poison', 'icon__grass'],
        health: '80',
        speed: '80',
        attack: '82 / 100',
        defence: '83 / 100'
      },
      {
        name: 'Charmander',
        photo: 'img/container-cards__photo-04.png',
        number: '004',
        type: ['icon__fire'],
        health: '39',
        speed: '65',
