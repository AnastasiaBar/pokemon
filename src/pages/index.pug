  .container
    .tabs
      .tabs__header
        section.tab
          each tab, index in tabs
            .tab__button.button(id= index, class= (index === 0 ? "button--active" : ''))= tab
      .tabs__main
        .tabs__content(id='tab1')
          .tabs__inner
            section.sidebar
              .sidebar__inner
                section.per-page
                  h3.per-page__left Per page:
                  .per-page__right
                    each page in perPage
                      .per-page__item.button(class= (index === 0 ? "button--active" : ''))= page
                +filter
            section.container-cards(class=allMods)&attributes(attributes)
              +loader
              .container-cards__inner
                each pokemon in pokemonInfo
                  +card(pokemon)
          .tabs__inner
            .btn-burger
              +icon('icon__filter', 'btn-burger__burger-icon')
            +paginator
        .tabs__content(id='tab2')
          +container-fight
